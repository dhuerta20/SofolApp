<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SofolApp.MVVM.Views.CreditPage"
             Title="CreditApp">
    <ScrollView>
        <Grid BackgroundColor="{AppThemeBinding Dark=#339933, Light=#29F429}">
            <!-- Definir las filas del Grid -->
            <Grid.RowDefinitions>
                <RowDefinition Height="2*" />
                <!-- 2/5 de la pantalla -->
                <RowDefinition Height="3*" />
                <!-- 3/5 de la pantalla -->
            </Grid.RowDefinitions>

            <!-- Contenido de la parte superior (2/5 de la pantalla) -->
            <FlexLayout JustifyContent="Start" AlignItems="Center" Direction="Column" Grid.Row="0" Padding="20">
                <Label Text="APLICACION DE &#10;CREDITO" TextColor="White" FontSize="28" HorizontalTextAlignment="Center" Margin="0,5,0,10"/>
                <Image Source="reconocimiento_facial_real.png" HeightRequest="120" WidthRequest="120" Aspect="AspectFill" Margin="0,0,0,10"/>
                <Label Text="Nombre del usuario" FontSize="28" FontAttributes="Bold" Margin="0,10,0,10"/>
            </FlexLayout>

            <!-- Contenido de la parte inferior (3/5 de la pantalla) -->
            <StackLayout Grid.Row="1" VerticalOptions="StartAndExpand" Spacing="0">
                <Frame BorderColor="Transparent" BackgroundColor="{AppThemeBinding Dark=#1e2229, Light=White}"
                       VerticalOptions="FillAndExpand" CornerRadius="35" Padding="20" Margin="0,0,0,-25">
                    <StackLayout>
                        <FlexLayout Direction="Row" JustifyContent="SpaceAround" AlignItems="Start" Margin="0,0,0,20">
                            <ImageButton Source="whatsapp.png" BackgroundColor="Transparent" BorderColor="Transparent"
                                         HeightRequest="{OnPlatform Android=45, iOS=45, WinUI=70, MacCatalyst=70}" 
                                         WidthRequest="{OnPlatform Android=45, iOS=45, WinUI=70, MacCatalyst=70}" />
                            <ImageButton Source="telefono.png" BackgroundColor="Transparent" BorderColor="Transparent"
                                         HeightRequest="{OnPlatform Android=45, iOS=45, WinUI=70, MacCatalyst=70}" 
                                         WidthRequest="{OnPlatform Android=45, iOS=45, WinUI=70, MacCatalyst=70}"/>
                            <ImageButton Source="gmail.png" BackgroundColor="Transparent" BorderColor="Transparent"
                                         HeightRequest="{OnPlatform Android=45, iOS=45, WinUI=70, MacCatalyst=70}" 
                                         WidthRequest="{OnPlatform Android=45, iOS=45, WinUI=70, MacCatalyst=70}"/>
                        </FlexLayout>
                        <StackLayout>
                            <BoxView Color="LightGray" HeightRequest="2" HorizontalOptions="FillAndExpand" Margin="0,0,0,20"/>
                        </StackLayout>

                        <Grid RowDefinitions="Auto,Auto,Auto,Auto,Auto,45" ColumnDefinitions="Auto,*" RowSpacing="20" Padding="10">
                            <Label Text="Informacion General" TextColor="Teal" FontSize="{OnPlatform Android=26, iOS=26, WinUI=40, MacCatalyst=40}" FontAttributes="Bold" Grid.Row="0" Grid.ColumnSpan="2" 
                                   HorizontalOptions="Center"
                                   VerticalOptions="Center"/>

                            <Image Source="confirmacion_de_identidad.png" Aspect="AspectFit"
                                   HeightRequest="{OnPlatform Android=45, iOS=45, WinUI=80, MacCatalyst=80}" 
                                   WidthRequest="{OnPlatform Android=45, iOS=45, WinUI=70, MacCatalyst=70}" 
                                   Grid.Row="1" Grid.Column="0" 
                                   HorizontalOptions="Start"
                                   VerticalOptions="Center" Margin="0,0,10,0"/>
                            <Button Text="Confirmacion de identidad" 
                                    BackgroundColor="{OnPlatform Android=Transparent, iOS=Transparent, WinUI=#339933, MacCatalyst=#339933}" 
                                    FontSize="{OnPlatform Android=22, iOS=22, WinUI=34, MacCatalyst=34}"
                                    TextColor="{AppThemeBinding Dark=White, Light=Black}"                                   
                                    FontAttributes="Bold" 
                                    Grid.Row="1" Grid.Column="{OnPlatform Android=0, iOS=0, WinUI=1, MacCatalyst=1}" 
                                    VerticalOptions="Center"
                                    HorizontalOptions="Start" 
                                    Margin="{OnPlatform Android='40,0,0,0', iOS='40,0,0,0', WinUI='75,0,0,0', MacCatalyst='35,0,0,0'}"/>

                            <Image Source="informacion_personal.png" Aspect="AspectFit" Grid.Row="2" Grid.Column="0"
                                   HeightRequest="{OnPlatform Android=45, iOS=45, WinUI=70, MacCatalyst=70}" 
                                   WidthRequest="{OnPlatform Android=45, iOS=45, WinUI=70, MacCatalyst=70}" 
                                   HorizontalOptions="Start" 
                                   VerticalOptions="Center"
                                   Margin="0,0,10,0"                            
                                   />

                            <Button Text="Datos personales" FontSize="{OnPlatform Android=22, iOS=22, WinUI=34, MacCatalyst=34}"
                                    TextColor="{AppThemeBinding Dark=White, Light=Black}" 
                                    BackgroundColor="{OnPlatform Android=Transparent, iOS=Transparent, WinUI=#339933, MacCatalyst=#339933}"
                                    Grid.Row="2" Grid.Column="{OnPlatform Android=0, iOS=0, WinUI=1, MacCatalyst=1}" 
                                    VerticalOptions="Center" HorizontalOptions="Start" 
                                    FontAttributes="Bold"
                                    Margin="{OnPlatform Android='40,0,0,0', iOS='40,0,0,0', WinUI='75,0,0,0', MacCatalyst='75,0,0,0'}"
                                    
                                    />

                            <Image Source="estatus.png" Aspect="AspectFit" Grid.Row="3" Grid.Column="0"
                                   HeightRequest="{OnPlatform Android=45, iOS=45, WinUI=70, MacCatalyst=70}" 
                                   WidthRequest="{OnPlatform Android=45, iOS=45, WinUI=70, MacCatalyst=70}" 
                                   HorizontalOptions="Start"
                                   VerticalOptions="Center"
                                   Margin="0,0,10,0"/>
                            <Button Text="Estatus" FontSize="{OnPlatform Android=22, iOS=22, WinUI=34, MacCatalyst=34}"
                                    BackgroundColor="{OnPlatform Android=Transparent, iOS=Transparent, WinUI=#339933, MacCatalyst=#339933}"
                                    TextColor="{AppThemeBinding Dark=White, Light=Black}" Grid.Row="3"
                                    Grid.Column="{OnPlatform Android=0, iOS=0, WinUI=1, MacCatalyst=1}"
                                    VerticalOptions="Center"
                                    HorizontalOptions="Start"
                                    FontAttributes="Bold" 
                                    Margin="{OnPlatform Android='40,0,0,0', iOS='40,0,0,0', WinUI='75,0,0,0', MacCatalyst='75,0,0,0'}"
                                    />

                            <BoxView Color="LightGray" HeightRequest="2" Grid.Row="4" Grid.ColumnSpan="2" HorizontalOptions="Fill" Margin="0,20,0,20"/>

                            <Grid Grid.Row="5" Grid.ColumnSpan="2">
                                <Image Source="proxcredit_logo_final.png"
                                       Aspect="AspectFit" 
                                       HeightRequest="180" WidthRequest="180" 
                                       HorizontalOptions="Start" VerticalOptions="Center"
                                       Margin="0,0,0,20"/>

                                <Image Source="condusef_logo_final.png"
                                       Aspect="AspectFit" 
                                       HeightRequest="100" WidthRequest="100" 
                                       HorizontalOptions="End" VerticalOptions="Center" 
                                       Margin="0,0,0,20"/>
                            </Grid>
                        </Grid>
                    </StackLayout>
                </Frame>
            </StackLayout>
        </Grid>
    </ScrollView>
</ContentPage>

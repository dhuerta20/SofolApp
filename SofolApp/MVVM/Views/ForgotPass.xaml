<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SofolApp.MVVM.Views.ForgotPass"
             Title="ForgotPass">
    <VerticalStackLayout Padding="20" Spacing="20">
        <Label 
            Text="¿Olvidaste tu contraseña? No te preocupes, aquí puedes recuperarla"
            VerticalOptions="Center" 
            HorizontalOptions="Center"
            FontSize="16"/>
        <Label Text="Ingresa tu correo electrónico" FontSize="14"/>
        <Entry Placeholder="Correo electrónico" Text="{Binding Email}"/>
        <Button Text="Enviar correo de recuperación"
                FontSize="18"
                BackgroundColor="#5dd684"
                Command="{Binding SendCodeToEmailCommand}"
                IsEnabled="{Binding IsNotBusy}"/>
        <ActivityIndicator IsRunning="{Binding IsBusy}" IsVisible="{Binding IsBusy}" Color="#5dd684"/>
    </VerticalStackLayout>
</ContentPage>